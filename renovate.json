{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Europe/Prague",
  "prConcurrentLimit": 1,
  "prHourlyLimit": 1,
  "dependencyDashboard": true,
  "automerge": false,
  "stabilityDays": 14,
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "schedule": [
        "before 3am on Monday"
      ],
      "automerge": true,
      "rangeStrategy": "pin"
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "major"
      ],
      "schedule": [
        "before 3am on Monday"
      ],
      "groupName": "Weekly DevDependencies Update",
      "prCreation": "not-pending",
      "rangeStrategy": "pin"
    },
    {
      "matchDepTypes": [
        "dependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "Monthly Dependencies Update",
      "schedule": [
        "before 3am on the first day of the month"
      ],
      "prCreation": "not-pending",
      "rangeStrategy": "pin"
    }
  ]
}
