{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],
  "timezone": "Europe/Prague",
  "prConcurrentLimit": 1,
  "prHourlyLimit": 1,
  "dependencyDashboard": true,
  "automerge": false,
  "stabilityDays": 14,
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "schedule": [
        "before 3am on Monday"
      ],
      "automerge": true,
      "labels": [
        "patch",
        "dev"
      ]
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "major"
      ],
      "schedule": [
        "before 3am on Monday"
      ],
      "groupName": "Weekly DevDependencies Update",
      "prCreation": "not-pending",
      "labels": [
        "minor-major",
        "dev"
      ]
    },
    {
      "matchDepTypes": [
        "dependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "Monthly Dependencies Update",
      "schedule": [
        "before 3am on the first day of the month"
      ],
      "prCreation": "not-pending",
      "labels": [
        "minor-patch",
        "prod"
      ]
    },
    {
      "matchDepTypes": [
        "dependencies",
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor",
        "major"
      ],
      "matchSourceUrlPrefixes": [
        "https://github.com/advisories"
      ],
      "automerge": false,
      "schedule": [
        "at any time"
      ],
      "labels": [
        "security",
        "urgent"
      ],
      "description": "Security updates applied immediately after tests pass"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 3am on Monday"
    ],
    "automerge": true,
    "labels": [
      "maintenance"
    ]
  }
}